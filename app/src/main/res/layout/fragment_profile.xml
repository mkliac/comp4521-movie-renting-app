<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profilef_avator"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.18"
        android:src="@drawable/profile"
        app:tint="#737373" />

    <TextView
        android:id="@+id/profilef_username_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Username:"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilef_avator" />

    <TextView
        android:id="@+id/profilef_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="TextView"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/profilef_username_text"
        app:layout_constraintTop_toTopOf="@+id/profilef_username_text" />

    <TextView
        android:id="@+id/profilef_nickname_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Nickname:"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/profilef_username_text"
        app:layout_constraintTop_toBottomOf="@+id/profilef_username_text" />

    <TextView
        android:id="@+id/profilef_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="TextView"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/profilef_nickname_text"
        app:layout_constraintTop_toTopOf="@+id/profilef_nickname_text" />


    <TextView
        android:id="@+id/profilef_credits_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Credits:"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/profilef_username_text"
        app:layout_constraintTop_toBottomOf="@+id/profilef_nickname_text" />

    <TextView
        android:id="@+id/profilef_credit_remain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="TextView"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/profilef_credits_text"
        app:layout_constraintTop_toTopOf="@+id/profilef_credits_text" />


    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/profilef_my_movie"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:contentDescription="My Movies"
        android:text="My Movies"
        app:icon="@drawable/my_movie"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilef_credits_text"
        app:layout_constraintVertical_bias="0.12" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/profilef_purchase_credits"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:contentDescription="Purchase Credits"
        android:text="Purchase Credits"
        app:icon="@drawable/creditcard"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilef_my_movie" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/profilef_profile_settings"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:contentDescription="Profile Settings"
        android:text="Profile Settings"
        app:icon="@drawable/user_setting"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilef_purchase_credits" />
</androidx.constraintlayout.widget.ConstraintLayout>