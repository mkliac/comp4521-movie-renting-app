<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register">

    <EditText
        android:id="@+id/register_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:textColorHint="@color/whiteTran"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:hint="Username"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.268" />

    <TextView
        android:id="@+id/register_username_err"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:textColorHint="@color/whiteTran"
        android:textColor="@color/white"
        android:text="error tag"
        app:layout_constraintStart_toStartOf="@+id/register_username"
        app:layout_constraintTop_toBottomOf="@+id/register_username" />

    <EditText
        android:id="@+id/register_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:backgroundTint="@color/white"
        android:textColorHint="@color/whiteTran"
        android:textColor="@color/white"
        android:inputType="textPassword"
        android:hint="Password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_username" />

    <TextView
        android:id="@+id/register_pw_err"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F43325"
        android:text="*Please enter password"
        app:layout_constraintStart_toStartOf="@+id/register_pw"
        app:layout_constraintTop_toBottomOf="@+id/register_pw" />

    <EditText
        android:id="@+id/register_re_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:textColorHint="@color/whiteTran"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:hint="Re-enter password"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_pw" />

    <TextView
        android:id="@+id/register_re_pw_err"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F43325"
        android:text="*Password not match"
        app:layout_constraintStart_toStartOf="@+id/register_re_pw"
        app:layout_constraintTop_toBottomOf="@+id/register_re_pw" />

    <CheckBox
        android:id="@+id/register_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="I accept the "
        android:layout_marginStart="32dp"
        android:layout_marginTop="76dp"
        app:layout_constraintBottom_toTopOf="@+id/register_signUp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_re_pw"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/register_tnc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#03A9F4"
        android:text="terms and conditions"
        app:layout_constraintBottom_toBottomOf="@+id/register_checkbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/register_checkbox"
        app:layout_constraintTop_toTopOf="@+id/register_checkbox" />

    <TextView
        android:id="@+id/register_tnc_err"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F43325"
        android:text="*you must accept the terms and conditions to sign up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_checkbox" />

    <Button
        android:id="@+id/register_signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_marginTop="88dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_re_pw"
        app:layout_constraintVertical_bias="0.306" />

    <ProgressBar
        android:id="@+id/register_progressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>